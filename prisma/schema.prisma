generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Clothe {
  id_clothe       String    @id @default(uuid())
  description     String
  image           String
  favorite        String
  category        String
  createdAt       DateTime  @default(now())
}

model Menu {
  id_menu         Int      @id @default(autoincrement())
  title           String
  icon            String
  url             String
  id_menu_father     Int
}